<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formbayartagihan"
    tools:context=".bayartagihan">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#38ffffff"
        android:hint="Jumlah yang akan di bayarkan"
        android:drawablePadding="20dp"
        android:padding="28dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#38ffffff"
        android:hint="tanggal pembayaran"
        android:drawablePadding="20dp"
        android:padding="28dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#38ffffff"
        android:hint="status pembayaran"
        android:drawablePadding="20dp"
        android:padding="28dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>


    <Button
        android:id="@+id/btnwhatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="bayar"
        android:onClick="openWhatsapp"
        android:textColor="@color/black" />

</RelativeLayout>
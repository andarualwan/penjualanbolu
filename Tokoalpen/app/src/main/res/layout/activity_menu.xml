<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu"
    tools:context=".Menu">

  <Button
      android:id="@+id/btnmenu"
      android:layout_width="322dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="320dp"
      android:text="Produk Yang Tersedia"
      android:textColor="@color/black" />

  <Button
      android:id="@+id/btnperaturan"
      android:layout_width="322dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="Aturan Pemesanan"
      android:textColor="@color/black" />
  <Button
      android:id="@+id/btnformulir"
      android:layout_width="322dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="formulir Pemesanan"
      android:textColor="@color/black" />

  <Button
      android:id="@+id/btnkontak"
      android:layout_width="322dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="Kontak Pembelian"
      android:textColor="@color/black" />

  <Button
      android:id="@+id/btnjamtoko"
      android:layout_width="322dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="Jam Toko"
      android:textColor="@color/black" />

  <Button
      android:id="@+id/btnkeluar"
      android:layout_width="322dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="Logout"
      android:textColor="@color/black" />



</LinearLayout>
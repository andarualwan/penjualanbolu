<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >
    
    <ScrollView
     	android:id="@+id/scrollView1"
     	android:layout_width="match_parent"
     	android:layout_height="0dp"
     	android:layout_weight="1" >
    
			<TableLayout
				android:stretchColumns="0,1"
			    android:id="@+id/main_table"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent">
			    
			    <LinearLayout
					android:id="@+id/tengah"
					android:gravity="center"
					android:orientation="vertical"
					android:layout_marginTop="20dp"
					android:layout_gravity="center_vertical"
					android:layout_height="wrap_content"
					android:layout_width="match_parent">
				
			   </LinearLayout>
			   
			    <TableRow
			            android:id="@+id/tableRow2"
			            android:layout_marginTop="0dp"
			            android:layout_gravity="center_horizontal"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content" >
					
			        <ImageView
			            android:id="@+id/imgnotfound"
			            android:layout_width="120dp"
			            android:layout_height="120dp"
			            android:visibility="gone"
			            android:alpha="0.5"
			            android:contentDescription="@string/str_ic_add"
			            android:src="@drawable/ic_fix_not_found" />
			        </TableRow>
			        
					<TableRow
			            android:id="@+id/tableRow3"
			            android:layout_marginTop="0dp"
			            android:layout_gravity="center_horizontal"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content" >
							    
					<TextView
						android:id="@+id/textview_null"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:layout_marginTop="25dp"
						android:textSize="14sp"
						android:visibility="gone"
						android:text="@string/kosong" />
					</TableRow>
			    
			</TableLayout>			
			
	</ScrollView>
					    
		<TextView
			android:id="@+id/textview_notfound"
			android:gravity="center"
			android:layout_gravity="center_vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:text="@string/notfound" />
	
    <!-- footer disini -->
    <LinearLayout
    	android:background="#D3D3D3"
        android:id="@+id/footer"
       	android:gravity="center"
       	android:paddingLeft="10dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:layout_height="wrap_content"
       	android:layout_width="match_parent">
			    
        <Button
			android:id="@+id/btn_tambah_op"
		    android:textColor="#5d6153"
		    android:textSize="15sp"
		    android:shadowRadius="0.6"
		    android:shadowDx="1"
		    android:shadowDy="1"
		    android:padding="10dp"
		    android:background="@drawable/custom_btn_blue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/btn_tambah_op" />

    </LinearLayout>

</LinearLayout>
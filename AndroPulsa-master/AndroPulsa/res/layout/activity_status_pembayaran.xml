<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical" >

    <TableLayout 
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp" 
                android:text="@string/str_id_trans" />
            
            <TextView
                android:id="@+id/textSts1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null" />

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp" 
                android:text="@string/str_totalbeli" />
            
            <TextView
                android:id="@+id/textSts2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null" />

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp" 
                android:text="@string/str_status" />
            
            <Spinner
	            android:id="@+id/spinner_status"
	            android:spinnerMode="dropdown"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
            
            <ImageView
				android:id="@+id/imgDelStats"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:contentDescription="@string/str_ic_add"
				android:src="@drawable/ic_discard" />

        </TableRow>
        
   </TableLayout>

</LinearLayout>

	<TableLayout
		android:stretchColumns="0,1"
		android:id="@+id/head_table"
		android:layout_marginLeft="10dp"
   		android:layout_marginRight="10dp"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">
	</TableLayout>

	<ScrollView
     	android:id="@+id/scrollView1"
     	android:layout_width="match_parent"
     	android:layout_height="0dp"
     	android:layout_weight="1" >
    
			<TableLayout
				android:stretchColumns="0,1"
			    android:id="@+id/status_table"
			    android:layout_marginLeft="10dp"
    			android:layout_marginRight="10dp"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent">
			    
			</TableLayout>			
			
	</ScrollView>
	
</LinearLayout>